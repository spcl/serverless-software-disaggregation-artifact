FROM ubuntu:22.04

RUN apt-get update && apt-get install --no-install-recommends -y gcc g++ make cmake unzip wget
RUN wget --no-check-certificate https://github.com/opencv/opencv/archive/refs/tags/4.5.0.zip
RUN unzip 4.5.0.zip
RUN mkdir build && cd build && cmake -D CMAKE_BUILD_TYPE=RELEASE  -D BUILD_EXAMPLES=Off -D OPENCV_GENERATE_PKGCONFIG=ON -DCMAKE_INSTALL_PREFIX=/opt/opencv -DBUILD_LIST=core,imgproc,imgcodecs ../opencv-4.5.0
RUN cd build && make -j8 && make install

